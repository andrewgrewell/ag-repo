{
  "name": "starwars-auth",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/starwars/services/auth",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/starwars/services/auth",
        "color": true,
        "command": "sls package"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/starwars/services/auth",
        "color": true,
        "command": "sls offline start",
        "envFile": "apps/starwars/services/auth/.env.local"
      }
    },
    "local-token": {
      "executor": "nx:run-commands",
      "options": {
        "color": true,
        "command": "node tools/scripts/create-jwt.mjs --secret=$JWT_SECRET",
        "envFile": "apps/starwars/services/auth/.env.local"
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/starwars/services/auth",
        "color": true,
        "command": "sls deploy --verbose"
      },
      "dependsOn": [
        {
          "target": "deploy",
          "projects": "dependencies"
        }
      ]
    },
    "remove": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/starwars/services/auth",
        "color": true,
        "command": "sls remove"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/starwars/services/auth/jest.config.ts"
      }
    }
  },
  "tags": ["node"]
}
