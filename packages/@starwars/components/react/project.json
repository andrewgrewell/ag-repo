{
  "name": "starwars-components-react",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/@starwars/components/react/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/@starwars/components/react",
        "main": "packages/@starwars/components/react/src/index.ts",
        "tsConfig": "packages/@starwars/components/react/tsconfig.lib.json",
        "assets": ["packages/@starwars/components/react/*.md"]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/@starwars/components/react/jest.config.ts"
      }
    }
  },
  "tags": ["react"]
}
