{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@ag-oss/blog": ["packages/blog/src/index.ts"],
      "@ag-oss/child-process": ["packages/child-process/src/index.ts"],
      "@ag-oss/dates": ["packages/dates/src/index.ts"],
      "@ag-oss/fs": ["packages/fs/src/index.ts"],
      "@ag-oss/logging": ["packages/logging/src/index.ts"],
      "@ag-oss/loops": ["packages/loops/src/index.ts"],
      "@ag-oss/nx-plugin": ["packages/nx/plugin/src/index.ts"],
      "@ag-oss/nx-workflows": ["packages/nx/workflows/src/index.ts"],
      "@ag-oss/objects": ["packages/objects/src/index.ts"],
      "@ag-oss/prompts": ["packages/prompts/src/index.ts"],
      "@ag-oss/repo": ["packages/repo/src/index.ts"],
      "@ag-oss/rxjs": ["packages/rxjs/src/index.ts"],
      "@ag-oss/strings": ["packages/strings/src/index.ts"],
      "@ag-oss/workflows-js": ["packages/workflows/js/src/index.ts"],
      "@ag-oss/workflows-node": ["packages/workflows/node/src/index.ts"],
      "@starwars/components-react": ["packages/@starwars/components/react/src/index.ts"],
      "@starwars/e2e-browser": ["packages/@starwars/e2e/browser/src/index.ts"],
      "@starwars/test-utils": [
        "packages/@starwars/test-utils/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
